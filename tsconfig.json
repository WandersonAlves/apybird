{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "types": ["node", "reflect-metadata"],
    "outDir": "./lib",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "lib": ["es2017"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
