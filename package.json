{
  "name": "apybird",
  "version": "0.0.7",
  "description": "Generate API Blueprint from decorators",
  "main": "lib/index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "chai": "^4.3.4",
    "mocha": "^8.3.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "files": [
    "lib/**/*",
    "bin/**/*"
  ],
  "bin": {
    "apybird": "bin/apybird.js"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.x"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "build:cli": "rm -rf bin/apybird.js && tsc --project tsconfig-bin.json",
